@import "~shared/view/styles/colors.styl";

.table-pagination
  text-align right
  padding 0 6px 0 12px
  height 40px
  display flex
  align-items center
  justify-content flex-end
  border-top 1px solid #d8d8d8
  background $blue450
  &__page
    cursor pointer
    display inline-block
    padding 5px
    color $grey500
    &_current
      color #000
      font-weight 600
    &:hover
      color $blue500
  &__separator
    display inline-block