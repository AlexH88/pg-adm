.modal
  background-color #ffffff
  min-width 425px
  min-height 150px
  position relative
  outline none
  transition all 0.3s
  padding 30px
  box-sizing border-box

  &_animate
    transform scale(1)
    opacity 1
  
  &__content
    overflow visible !important
    padding-bottom 10px

  &__overlay
    position fixed
    z-index 9999
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(0, 0, 0, 0.3)
    display flex
    align-items center
    justify-content center

  &__close
    background-image url('../../../../shared/view/styles/images/cross-icon.svg');
    width 16px
    height 16px
    cursor pointer
    position absolute
    right 20px
    top 20px
    &:hover
      color black
      opacity 0.5

  &__header
    display flex
    align-items center
    justify-content center

  &__title
    margin 0
    font-weight normal
    font-size 1.5rem
    max-width 325px
    text-align center
