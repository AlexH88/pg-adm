.load-icon
    height 32px
    width 32px
    box-sizing content-box
    box-shadow none
    border: 0
    border-radius 3px
    display flex
    align-items center
    transition 0.2s opacity
    opacity 0.7
    background #2196f3
    display flex
    justify-content center
    cursor pointer
    &:hover
        opacity 1
    img
        cursor pointer
        width auto
        height 18px
        margin-top 5px
    label
        width 100%
        height 100%
        text-align center
        cursor pointer
    input
      display none