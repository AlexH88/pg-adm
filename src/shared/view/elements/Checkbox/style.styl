@import "~shared/view/styles/colors.styl";

.checkbox-wrapper
  display inline-block
  padding 0.8rem 0
  margin-bottom 4px
  &_little
    padding 0
  &_grey
    .check .checked
      background-color $grey50
      border-color $grey50
  .field
    height auto
    margin-bottom 0
    font-size 1rem
    cursor pointer
  .check
    height 16px
    width 16px
    border-color #c5c5c5
  .text
    padding-left 10px
    font-size 14px
    line-height normal
    color $grey500

  &_disabled .field .text
    color $grey400

  .check.checked
    background-color $blue300
    border-color $blue300
    &:after
      top 1px
      left 3px
      width 6px
      height 9px
      box-sizing border-box
      animation custom-checkmark-expand 140ms ease-out forwards
  $unit = .5
  @keyframes custom-checkmark-expand
    0%
      top (.9 * $unit)
      left (.6 * $unit)
      width 0
      height 0
    100%
      top (-.1 * $unit)
      left (.4 * $unit)
      width (.5 * $unit)
      height (1.2 * $unit)