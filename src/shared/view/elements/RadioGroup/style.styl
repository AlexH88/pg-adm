@import "~shared/view/styles/colors.styl";

.radio-group-wrapper
  display inline-block
  h4
    margin 0
  .field
    height auto
    margin-bottom 0
    font-size 1rem
    cursor pointer
    padding 0.2rem 0
  .radio, .radioChecked
    height 1rem
    width 1rem
    border-width 0.15rem
    &:before
      background-color $blue400
  .radio
    border-color $grey500
  .radioChecked
    border-color $blue400
  .text
    padding-left 10px
    font-size 14px
    line-height 1.3rem
    color $grey500
