.add-catalog-upd
  min-width 350px
  max-width 600px
  
  &__footer
    margin-top 30px
    display flex
    justify-content space-between
    
  &__general-error
    color red
    display flex
    justify-content center

  &__success
    color green
    display flex
    justify-content center

  &__preloader
    position absolute
    background-size contain
    background-image url('../../../../../shared/view/styles/images/loader.gif')
    width 20px
    height 20px
    top 40%
    right 0

  &__password-wrapper
    position relative
  
  &__fields
    width 500px
    display flex

  &__fields > div
    flex 1 1 auto

  &__fields > div:first-child
    margin-right 30px

  &__dropdown-wrapper
    padding-bottom 14px
    margin-bottom 4px

  &__checkbox-wrapper
    padding-top 14px
    padding-bottom 14px
    margin-bottom 4px
    