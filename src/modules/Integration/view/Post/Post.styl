@import "~shared/view/styles/colors.styl"

.integration
  &__error
    color red
  
  &__error-status
    &_type
      &_success
        width 10px
        height 10px
        border-radius 100%
        background-color $green220
      &_fail
        width 10px
        height 10px
        border-radius 100%
        background-color $red100

  &__circle
    width 10px
    height 10px
    display inline-block
    vertical-align super
    border-radius 50%
    margin-right 10px
    &_green
      background-color $green220

    &_red
      background-color $red100