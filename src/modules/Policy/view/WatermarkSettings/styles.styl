.checkbox-wrapper-setupwizard {
  padding: 0 5px 0 5px;
  font-weight: bold;
}

.form-group-custom {
  position: relative;
  border-radius: 6px;
  padding-bottom: 0.7em;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-group-custom__input-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-basis: 100%;
}

.form-group-custom__input-row__label {
  flex-basis: 40%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.form-group-custom__input-row__input {
  position: relative;
  flex-basis: 60%;
  box-sizing: border-box;
  min-width: 60%;
}

.form-group-custom__input-row__input > input {
  width: 100%;
}

.form-group-custom-drop {
  position: relative;
  border-radius: 6px;
  padding-bottom: 0.7em;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  padding: 0.5rem;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 6px;
  color: #9faecb;
  font-family: "ProximaNova", sans-serif;
  font-size: inherit;
  resize: none;
}

.wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.box {
  /* border: 2px solid #ddd; */
  border-radius: 10px;
  /* padding: 5px; */
}

.title {
  color: rgba(53, 127, 209, 1);
  font-size: 2rem;
  text-align: center;
  animation: glow 1.5s ease 1;
}

.button-panel {
  justify-content: space-between;
  margin-bottom: 25px;
}

.modal-input-custom {
  display: block;
  /* height: 43px; */
  width: 100%;
  padding: 0.5rem 0.75rem;
  line-height: 1.25;
  font-size: 16px;
  color: #9faecb;
  box-shadow: inset 0 2px 4px 0 hsla(0, 0%, 0%, 0.08);
  background-color: #fff;
  background-image: none;
  background-clip: padding-box;
  border: 1px solid #e1e6ef;
  border-radius: 4px;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s,
    background-color ease-in-out 0.15s;
}

