.form-hint__block {
  display: none;
  font-weight: bold;
  font-size: 0.8em;
  align-items: center;
  justify-content: center;
  padding: 0px 10px;
  color: rgb(197, 69, 69);
  background-color: white;
  box-shadow: 0px 4px 13px 0px rgba(53, 127, 209, 0.26);
  border-radius: 6px;
  position: absolute;
  z-index: 3;
  min-height: 50px;
  width: 240px;
  transition: opacity 0.3s, left 0.3s, visibility 0.3s;
  text-align: center;
}

.form-hint__block--left {
  left: 103%;
}

.form-hint__block--right {
  right: 103%;
}

.form-hint__arrow-wrapper {
  width: 20px;
  height: 20px;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.form-hint__arrow-wrapper--left {
  left: -8%;
}

.form-hint__arrow-wrapper--right {
  right: -8%;
}

.form-hint__arrow-body {
  width: 14px;
  height: 14px;
  background-color: white;
  box-shadow: rgba(53, 127, 209, 0.15) 2px 0px 8px 0px;
}

.form-hint__arrow-body--left {
  margin-right: -20px;
  transform: rotate(45deg);
}

.form-hint__arrow-body--right {
  margin-left: -20px;
  transform: rotate(-45deg);
}

.sidebar-hint__arrow-body {
  width: 14px;
  height: 14px;
  background-color: white;
  transform: rotate(45deg);
  margin-left: -20px;
  box-shadow: rgba(53, 127, 209, 0.15) 2px 0px 8px 0px;
}

.sidebar-hint__arrow-wrapper {
  width: 20px;
  height: 20px;
  position: absolute;
  right: -8%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
