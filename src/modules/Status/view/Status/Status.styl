.chart-board
  width 100%
  display flex
  flex-wrap wrap
  justify-content center

.status
  margin 30px 0 30px 0
  display flex
  flex-wrap wrap

  &__chart-wrapper
    border 3px solid #eee
    border-radius 4px
    padding 5px
    margin 5px

.chart-container
  height 250px
  width 460px
  float left
  margin-top 30px
  margin-right 15px

.chart-row
  margin-top 20px
  margin-bottom 30px

.chart-row:after
  content ""
  display table
  clear both
