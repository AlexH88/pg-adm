.edit-roles
  &__footer
    display flex
    justify-content space-around
    margin-top 20px
    
  &__general-error
    color red
    display flex
    justify-content center
  
  &__check-label
    display block
    font-weight normal
    font-size 1.5rem
    text-align center
  
  &__check-field
    padding 10px 0
    overflow auto
    max-height 50vh

  &__actions
    padding 15px 0
    display flex
    justify-content space-around

  &__tree-toggle
    & .input-hide
      position absolute
      width 0
      height 0
      overflow hidden
      opacity 0
      & ~ .tree-toggle-children-list
        display none
      & + .custom-checkbox-tree
        display inline-block
        border 1px solid #b7dbf5
        border-radius 4px
        outline none
        padding 8px 12px
        padding 0.5em 0.5em
        color #33425e
        font-size inherit
        margin 0 10px 0 0
        transition all .4s
        position relative
        cursor pointer
        &:before
          content ""
          display block
          position absolute
          width 1em
          height 1em
          top -1px
          left -1px
          border 2px solid #b7dbf5
          border-radius 3px
          background-color: #b7dbf5

      &:empty + .custom-checkbox-tree
        &:after
          content "+"
          display block
          height 0.6em
          font-size 1.65em
          color #fff
          border-radius 3px
          background-color #b7dbf5
          position absolute
          top 1px
          left 1px
          display flex
          flex-direction row
          align-items center
          justify-content center
          font-weight bold
          font-family courier

      &:checked + .custom-checkbox-tree
        &:before
          background-color: #b7dbf5
      &:checked + .custom-checkbox-tree
        &:after
          content ""
          display block
          width 0.6em
          height 0
          border solid #fff
          border-width 0 0 3px 0
          position absolute
          top 50%
          left 1px
          z-index 10

      &:checked ~ .tree-toggle-children-list
        display block