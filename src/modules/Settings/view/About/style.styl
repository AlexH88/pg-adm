.features
  &__container
    margin 15px
    margin-top 50px

    ul 
      list-style-type none
      padding-left 0
      &>li
        padding 10px

    &_version
      font-size 1.2rem

    &_available
      font-size 1.2rem
      display table
      margin-top 15px
      &_title
        font-size 1.2rem
        display table-cell
        vertical-align top
      &_content
        display table-cell
        vertical-align top
        padding 10px
        padding-top 0px
      &_list
        list-style-type none
        margin 0px
        padding 0px
        max-height 200px
        height 200px
        min-height 200px
        overflow-y auto
      &_list-item
        padding 2px 5px
        min-width 200px
        text-align center

  &__blue-text
    color #2ea5ff

  &__license-for
    margin 10px 0
    font-size 1.2rem
    
  &__license-tilte
    font-size 1.2rem
    margin-bottom 10px

  &__footer
    display flex
    justify-content center
    & div
      margin 10px 20px

  &__block
    background rgba(0,0,0, .8)
    top 0px
    left 0px
    right 0px
    bottom 0px
    position fixed
    z-index 100
    display flex
    justify-content center
    align-items center
