@import "~shared/view/styles/colors.styl"

.printers
  &__circle
    width 10px
    height 10px
    display inline-block
    vertical-align super
    border-radius 50%
    margin-right 10px
    &_green
      background-color $green220

    &_red
      background-color $red100

  &__info
    margin 0 5px
    width 16px
    height 16px
    position relative

    .tooltip-wrapper
      position fixed
      height 16px
      display none
      z-index 10000

  &__info:hover
    .tooltip-wrapper
      display block
  
  &__icon-wrapper
    color #2196f3
    position absolute
    left 0
    top 0
    height 16px
    width 16px