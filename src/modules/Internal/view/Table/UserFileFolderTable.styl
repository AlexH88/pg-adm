.file-manager-empty {
  font-size: 22px;
  text-align: center;
  color: #9cadb9;
  padding: 30px;
}

.file-manager {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin-top: 16px;
}

.file-manager-content {
  width: 100%;
  position: relative;
  border-top: 1px solid #e6eaee;
  border-bottom: 1px solid #e6eaee;
}

.header {
  display: flex;
  min-height: 40px;
  border-bottom: 1px solid #e6eaee;
  padding: 0 0 0 4px;
  background-color: #fff;
}

.items {
  background-color: #fff;
  max-height: 450px;
  overflow: auto;
}

.header-cell {
  padding: 8px;
  display: flex;
  align-items: center;
  font-size: 14px;
  font-weight: bolder;
  color: #475f7b;
}

.header-cell-action {
  justify-content: flex-end;
}

.header-checkbox {
  flex: 0 0 40px;
  display: flex;
  align-items: center;
}

.itemCell__availableTo {
  display: flex;
  align-items: center;
}

@media (max-width: 1280px) {
  .itemCell__availableTo {
    display: none;
  } 
}