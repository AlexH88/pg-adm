.gallery
  position fixed
  top 0
  bottom 0
  right 0
  left 0
  background rgba(0,0,0,.5)
  display flex
  justify-content center
  overflow-y auto
  transition all .3s
  &__close-span
    color ghostwhite
    position fixed
    right 20px
    font-size 2.5rem
    &:hover
      cursor pointer
      color #2ea5ff

  &__image-container
    display flex
    padding 100px 20% 0 20%
    overflow-y auto
    flex-wrap wrap
    justify-content center

  &__loading-indicator
    width 150px
    height 150px
    
  &__loading-indicator svg circle
    stroke white

  &__image-wrap
    display block
    // max-width 212px
    // max-height 300px
    margin 10px
    padding 10px

  &__image-small-portrait
    width 200px
    height 300px
    transition all .3s
    cursor pointer
    color ghostwhite
    font-size 1.1rem
    border: 1px solid black
    background white
    display flex
    align-items center
    justify-content center
    & img 
      width 200px
      height 300px
      display block      
    &:hover
      border 1px solid #2ea5ff

  &__image-small-landscape
    width 300px
    height 200px
    transition all .3s
    cursor pointer
    color ghostwhite
    font-size 1.1rem
    border: 1px solid black
    display flex
    align-items center
    justify-content center
    & img 
      height 200px
      width: 300px
      display block
    &:hover
      border 1px solid #2ea5ff

  &__image-enlarged-portrait
    width 100%
    height 100%
    cursor pointer
    display: flex
    align-items stretch
    justify-content center
    flex-direction row
    & img 
      width auto
      margin auto
      height 100%
      display block

  &__image-enlarged-landscape
    width 100%
    height 100%
    cursor pointer
    display: flex
    align-items stretch
    justify-content center
    flex-direction column
    & img 
      width 100%
      height auto
      display block

  &__image-error
    display table-cell
    width 200px
    height 300px
    padding 20px
    box-sizing border-box
    text-align center
    color black
    font-size 1.1rem
    background ghostwhite
    display flex
    align-items center
    justify-content center


